{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "webRoot": "${workspaceRoot}",
      "url": "http://localhost:8080",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "node_modules/**"
      ],
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/server.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "PLANT_TOKEN_SECRET": "json-web-token-secret",
        "PLANT_DB_URL": "127.0.0.1:27017",
        "PLANT_DB_NAME": "plant-development",
        "PLANT_FB_ID": "facebook-app-id",
        "PLANT_FB_SECRET": "facebook-app-secret",
        "DEBUG": "plant:*"
      },
      "console": "internalConsole",
      "sourceMaps": true
    }, {
      "name": "TestPad",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/devops/locations-converter.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "plant:*"
      },
      "console": "internalConsole",
      "sourceMaps": true
    }, {
      "name": "Mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "./test/**/*.js"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "PLANT_TOKEN_SECRET": "json-web-token-secret",
        "PLANT_DB_URL": "127.0.0.1:27017",
        "PLANT_DB_NAME": "plant-test",
        "PLANT_FB_ID": "facebook-app-id",
        "PLANT_FB_SECRET": "facebook-app-secret",
        "PLANT_GOOGLE_ID": "google-app-id",
        "PLANT_GOOGLE_SECRET": "google-app-secret"
      },
      "console": "internalConsole",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Chrome"]
    }
  ]
}
